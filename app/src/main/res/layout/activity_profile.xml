<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <RelativeLayout
        android:id="@+id/rlProf"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimaryDark">

    </RelativeLayout>

    <TextView
        android:id="@+id/tvNPosts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="21dp"
        android:text="# of Posts"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/tvNFollowers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvNPosts"
        android:layout_centerHorizontal="true"
        android:text="# of Followers"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/tvNFollowing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tvNPosts"
        android:layout_marginEnd="46dp"
        android:text="# Following"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/tvTPosts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvNPosts"
        android:layout_below="@+id/tvNPosts"
        android:text="Posts"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/tvTFollowers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNPosts"
        android:layout_centerHorizontal="true"
        android:text="Followers"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/tvTFollowing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvNFollowing"
        android:layout_below="@+id/tvNPosts"
        android:text="Following"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/tvProfName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tvNPosts"
        android:layout_below="@+id/tvTPosts"
        android:layout_marginTop="20dp"
        android:text="Name"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/tvProfUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tvProfName"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/tvProfName"
        android:text="UserName"
        android:textColor="@color/colorAccent"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvProfPosts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/rlProf" />

    <TextView
        android:id="@+id/tvIsFollowing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tvNFollowing"
        android:layout_alignTop="@+id/tvProfName"
        android:background="@color/colorAccent"
        android:padding="1dp"
        android:text="THIS IS YOU"
        android:textColor="@color/colorPrimaryDark" />

</RelativeLayout>